<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.itis.scrabble.controllers.GameController">

    <!-- Верхняя панель: информация о ходе и таймер -->
    <top>
        <VBox spacing="5" style="-fx-background-color: #2E8B57; -fx-padding: 10;">
            <HBox alignment="CENTER" spacing="20">
                <Label fx:id="gameStatusLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Игра началась" />
                <Label fx:id="roomInfoLabel" style="-fx-text-fill: white;" text="Комната: " />
            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-text-fill: white;" text="Текущий ход:" />
                <Label fx:id="currentTurnPlayerLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" text="Игрок 1" />
                <Label style="-fx-text-fill: white;" text="Время:" />
                <Label fx:id="timerLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-min-width: 30;" text="90" />
                <ProgressBar fx:id="timerProgress" prefWidth="250" progress="1.0" />
            </HBox>
            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>

    <!-- Низ: информация об игроках, буквы и лог -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #F5F5F5;">
            <HBox fx:id="opponentTilesContainer" alignment="CENTER" spacing="5" style="-fx-min-height: 50;">
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
                <Rectangle fill="#CCCCCC" height="30" stroke="#999999" strokeWidth="1" style="-fx-arc-width: 5; -fx-arc-height: 5;" width="30.0" />
            </HBox>

            <!-- Панель управления ходом -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="confirmMoveButton" prefWidth="220" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Подтвердить ход (Enter)" />
                <Button fx:id="skipTurnButton" prefWidth="150" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Пропустить ход" />
                <Button fx:id="changeTilesButton" prefWidth="150" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" text="Поменять буквы" />
                <Button fx:id="surrenderButton" prefWidth="100" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Сдаться" />
                <Button fx:id="offerDrawButton" prefWidth="150" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Предложить ничью" />
            </HBox>
            <BorderPane.margin>
                <Insets bottom="20.0" top="10.0" />
            </BorderPane.margin>

        </VBox>
    </bottom>
    <center>

        <GridPane alignment="CENTER" hgap="3.0" vgap="3.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
                <ColumnConstraints minWidth="10.0" prefWidth="30.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />

            </rowConstraints>
        </GridPane>
    </center>
    <left>
        <VBox prefHeight="301.0" prefWidth="179.0" spacing="5" style="-fx-padding: 10px;" BorderPane.alignment="CENTER">
            <VBox prefHeight="0.0" prefWidth="159.0" style="-fx-background-color: #E8E8E8; -fx-padding: 10px;">
                <children>
                    <HBox spacing="10">
                        <children>
                            <Label style="-fx-font-weight: bold;" text="Вы:" />
                            <Label fx:id="myNameLabel" style="-fx-font-weight: bold; -fx-text-fill: #2E8B57;" text="Игрок1" />
                        </children>
                    </HBox>
                    <Label fx:id="myScoreLabel" style="-fx-font-weight: bold;" text="Всего очков:" />
                    <Label fx:id="myLastMoveLabel" style="-fx-text-fill: #666;" text="Последний ход: 0" />

                    <Label text="Букв:" />
                </children>
            </VBox>
            <VBox prefHeight="87.0" prefWidth="159.0" spacing="5" style="-fx-background-color: #E8E8E8; -fx-padding: 10px;">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label style="-fx-font-weight: bold;" text="Противник:" />
                        <Label fx:id="opponentNameLabel" style="-fx-font-weight: bold; -fx-text-fill: #2196F3;" text="Игрок2" />
                    </HBox>
                    <Label fx:id="opponentScoreLabel" style="-fx-font-weight: bold;" text="Всего очков:" />
                    <Label fx:id="opponentLastMoveLabel" style="-fx-text-fill: #666;" text="Последний ход: 0" />

                    <Label text="Букв: " />
                </children>
            </VBox>

            <VBox spacing="8" style="-fx-padding: 10px;">
                <Label fx:id="bagCountLabel" text="Осталось букв: 100" />
                <Label fx:id="turnCountLabel" text="Ход: 1" />
                <Label fx:id="connectedLabel" text="Игроков: 2/2" />
                <Button fx:id="exitButton" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="Выйти из игры" />
            </VBox>
        </VBox>
    </left>
</BorderPane>
