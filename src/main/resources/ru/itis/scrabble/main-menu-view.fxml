<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.itis.scrabble.controllers.MainMenuController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <Label style="-fx-text-fill: #2E8B57;" text="Главное меню">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="15">
        <Button fx:id="createRoomButton" prefWidth="250" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Создать комнату" />
        <Button fx:id="joinRoomButton" prefWidth="250" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Присоединиться" />
        <Button fx:id="profileButton" prefWidth="250" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Профиль" />
        <Button fx:id="statsButton" prefWidth="250" style="-fx-background-color: #9C27B0; -fx-text-fill: white;" text="Стили" />
        <Button fx:id="logoutButton" prefWidth="250" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Выйти" />
    </VBox>

    <Label fx:id="userInfoLabel" style="-fx-text-fill: #666;" text="Пользователь: " />
</VBox>
