<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.itis.scrabble.controllers.CreateRoomController">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Создание комнаты" style="-fx-text-fill: #2E8B57;">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>

    <VBox spacing="15" alignment="CENTER">
        <HBox spacing="10" alignment="CENTER">
            <Label text="Порт:"/>
            <TextField fx:id="portField" promptText="8080" prefWidth="100"/>
            <Button fx:id="randomPortButton" text="Случайный"/>
        </HBox>

        <Button fx:id="createButton" text="Создать" prefWidth="200"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Назад" prefWidth="200"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </VBox>

    <VBox fx:id="waitingPanel" spacing="10" alignment="CENTER" visible="false"
          style="-fx-padding: 20; -fx-background-color: #F0F8FF; -fx-border-color: #2196F3;">
        <Label text="Ожидание второго игрока..." style="-fx-text-fill: #2196F3; -fx-font-weight: bold;"/>
        <Label fx:id="waitingTimerLabel" text="Ожидание: 10:00"/>
        <Label fx:id="roomPortLabel" text="Порт: "/>
        <Button fx:id="cancelWaitingButton" text="Отмена" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
    </VBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false"/>
</VBox>